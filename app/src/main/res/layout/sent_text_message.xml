<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <FrameLayout
      android:layout_gravity="right"
      android:layout_marginLeft="@dimen/message_bubble_horizontal_spacing_lg"
      android:layout_marginRight="@dimen/message_bubble_horizontal_spacing_sm"
      android:background="@drawable/sent_message_bg"
      style="@style/TextMessageContainer">
    <TextView
        android:id="@+id/message_text"
        android:text="This is a text message"
        style="@style/TextMessageText"/>
  </FrameLayout>

</FrameLayout>